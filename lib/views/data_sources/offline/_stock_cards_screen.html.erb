    <table class="equipment spreadsheet">
      <thead>
        <tr>
          <th></th>
          <th><%= h(t("visits.health_center_stock_cards.have")) %></th>
          <th><%= h(t("visits.health_center_stock_cards.use")) %></th>
        </tr>
      </thead>
      <tbody>
        <%- StockCard.active.sort.each do |type|
              id = "stock_cards-#{type.code}" -%>
          <tr>
            <th><%= h type.label %></th>
            <%- %w(have use).each do |state| -%>
              <td>
                <%- [ [ h(t("yes")), "true" ], [ h(t("no")), "false" ], [ h(t("NR")), "nr" ] ].each do |label,value| -%>
                  <input required type="radio" value="<%= value %>" name="<%= id %>-<%= state %>" id="<%= id %>-<%= state %>-<%= value %>" checked="false">
                  <label for="<%= id %>-<%= state %>"><%= h label %></label>
                <%- end -%>
                <!--xf:alert><%= h(t("data_sources.hcvisit.errors.select_an_option")) %></xf:alert-->
              </td>
            <%- end -%>
          </tr>
        <%- end -%>
      </tbody>
    </table>

